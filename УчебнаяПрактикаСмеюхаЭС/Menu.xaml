<Window x:Class="УчебнаяПрактикаСмеюхаЭС.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:УчебнаяПрактикаСмеюхаЭС"
        mc:Ignorable="d"
        Title="ООО «Пиши-стирай»" MinHeight="450" MinWidth="550" Height="450" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid Background="#76E383">
            <Image Width="50" Height="50" HorizontalAlignment="Left" Source="Logo/logo.png"/>
            <TextBlock Text="Меню" Style="{StaticResource titleTextBlockStyle}"/>
        </Grid>

        <StackPanel Orientation="Vertical" Grid.Row="1" VerticalAlignment="Center">
            <Button Content="Список товаров" Margin="5" x:Name="BtnList" Click="BtnList_Click"/>
            <Button Content="Список заказов" Margin="5"/>
        </StackPanel>

        <Button Content="Назад" Grid.Row="1" VerticalAlignment="Bottom" Margin="10" x:Name="BtnBack" Click="BtnBack_Click"/>
    </Grid>
</Window>
